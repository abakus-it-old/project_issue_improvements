<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!-- ======================================================================================================== -->
        <record model="ir.ui.view" id="project_issue_project">
            <field name="name">project.issue.remove.project</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="arch" type="xml">
            
                <xpath expr="(//sheet[@string='Issue']/group/group/div)[1]" position="replace"/>
                <xpath expr="//label[@for='project_id']" position="replace"/>
                
                <xpath expr="//sheet[@string='Issue']/h1" position="after">
                    <label for="project_id"/>
                    <div style="width:272px;">
                        <field name="project_id" on_change="on_change_project(project_id)" class="oe_inline" context="{'default_use_issues':1}"/>
                        <button name="case_escalate" string="⇒ Escalate" type="object" class="oe_link" groups="base.group_user"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='priority']" position="after">
                        <field name="due_date"/>
                </xpath>
                
            </field>
        </record>
	</data>
</openerp>
